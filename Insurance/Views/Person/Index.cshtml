@model IEnumerable<Insurance.Models.PersonInfo>

@{
    Layout = null;
}

<!DOCTYPE html>

<section>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>
        <p>
            <a asp-action="CreatePerson">Create New</a>
        </p>
        <div class="box-body">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.IdentificationNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LicensePlate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LicenseSerialCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LicenseSerialNumber)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.IdentificationNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicensePlate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicenseSerialCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicenseSerialNumber)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</section>



